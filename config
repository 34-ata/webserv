server {
    listen 8080;
    server_name localhost;
    error_page 404 /errors/404.html;
    error_page 500 /errors/500.html;
    index index.html;
    client_max_body_size 1000000;

    location / {
        root /www;
        index index.html;
        autoindex off;
        methods GET;
    }

    location /cgi-bin {
    root /www/cgi-bin;
    cgi_extension .py;
    methods GET POST;
    cgi_path /usr/bin/python3;
}


    location /errors {
        root /www;
        methods GET;
    }
}
