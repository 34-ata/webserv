server {
    listen 9090;
    server_name localhost www.example.com;
    error_page 404 /errors/404.html;
    error_page 500 /errors/500.html;
    index index.html;
    client_max_body_size 1000000;

    location / {
        root /www;
        index index.html;
        autoindex off;
        methods GET POST;
    }

    location /upload {
        index index.html;
        root /var/www/uploads;
        methods POST;
        upload_store /var/www/uploads;
    }

    location /old-page {
        return 301 http://www.example.com/new-page;
    }

    location /cgi-bin {
        root /var/www/cgi-bin;
        cgi_extension .php;
        methods GET POST;
        cgi_path /usr/bin/php-cgi;
    }

    location /files {
        root /var/www/files;
        autoindex on;
        index index.html;
        methods GET;
    }
}
server {
    listen 8080;
    server_name api.example.com;

    location / {
        root /var/www/api;
        index index.py;
        methods GET POST;
        cgi_extension .py;
        cgi_path /usr/bin/python3;
    }
}

server {
    server_name api.example.com;
    listen 7090;

    location / {
        root /var/www/alternate;
        index index.html;
        autoindex off;
        methods GET;
    }
}
